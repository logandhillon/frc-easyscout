{
  "name": "frc-easyscout-site",
  "version": "0.1.0-dev",
  "author": {
    "name": "Logan Dhillon",
    "url": "logandhillon.com"
  },
  "scripts": {
    "dev": "pnpm dlx @tailwindcss/cli -i source.css -o dist.css --watch",
    "build:css": "tailwindcss -i source.css -o ./dist/dist.css --minify",
    "build:html": "minify index.html > dist/index.html",
    "build:js": "minify app.js > dist/app.js",
    "build": "npm run build:css && npm run build:js && npm run build:html && cpx \"public/*\" dist/public/"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "minify": "^15.0.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "cpx": "^1.5.0"
  }
}
